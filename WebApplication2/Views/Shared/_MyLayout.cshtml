<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Web MVC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 70px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 20px;
            text-align: center;
            color: #888;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 24px;
        }

        .container {
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Web MVC</a>
            <div>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/Instructor/Index">Instructors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Department/Index">Departments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Course/Index">Courses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        &copy; @DateTime.Now.Year - Created with 💙 by Somaya
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
























